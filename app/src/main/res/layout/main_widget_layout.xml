<?xml version="1.0" encoding="utf-8"?>
<GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="6"
        android:rowCount="2"
        android:background="#BA000000"
        android:paddingBottom="8sp"
        android:paddingTop="4sp"
>
    <TextView
            android:id="@+id/currentDateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/placeholder_time"
            android:paddingBottom="6sp"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/poppins_regular"
            android:layout_columnSpan="6"
    />
    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_columnWeight="1"
    >
        <TextView
                android:id="@+id/imsakLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Imsak"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="#FFF"
                android:gravity="center"
        />
        <TextView
                android:id="@+id/imsakTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/placeholderTime"
                android:fontFamily="@font/poppins_regular"
                android:textSize="13sp"
                android:textColor="#FFF"
                android:gravity="center"
        />
    </LinearLayout>

    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_columnWeight="1"
    >
        <TextView
                android:id="@+id/subuhLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/subuh"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="13sp"
                android:textColor="#FFF"
                android:textStyle="bold"
                android:gravity="center"
        />
        <TextView
                android:id="@+id/subuhTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/placeholderTime"
                android:fontFamily="@font/poppins_regular"
                android:textSize="13sp"
                android:textColor="#FFF"
                android:gravity="center"
        />
    </LinearLayout>
    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_columnWeight="1"
    >
        <TextView
                android:id="@+id/dzuhurLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dzuhur"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="13sp"
                android:textColor="#FFF"
                android:textStyle="bold"
                android:gravity="center"
        />
        <TextView
                android:id="@+id/dzuhurTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/placeholderTime"
                android:fontFamily="@font/poppins_regular"
                android:textSize="13sp"
                android:textColor="#FFF"
                android:gravity="center"
        />
    </LinearLayout>
    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_columnWeight="1"
    >
        <TextView
                android:id="@+id/asharLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ashar"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="#FFF"
                android:gravity="center"
        />
        <TextView
                android:id="@+id/asharTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/placeholderTime"
                android:fontFamily="@font/poppins_regular"
                android:textSize="13sp"
                android:textColor="#FFF"
                android:gravity="center"
        />
    </LinearLayout>
    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_columnWeight="1"
    >
        <TextView
                android:id="@+id/maghribLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/maghrib"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="#FFF"
                android:gravity="center"
        />
        <TextView
                android:id="@+id/maghribTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/placeholderTime"
                android:fontFamily="@font/poppins_regular"
                android:textSize="13sp"
                android:textColor="#FFF"
                android:gravity="center"
        />
    </LinearLayout>
    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_columnWeight="1"
    >
        <TextView
                android:id="@+id/isyaLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/isya"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="#FFF"
                android:gravity="center"
        />
        <TextView
                android:id="@+id/isyaTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/placeholderTime"
                android:fontFamily="@font/poppins_regular"
                android:textSize="13sp"
                android:textColor="#FFF"
                android:gravity="center"
        />
    </LinearLayout>
</GridLayout>